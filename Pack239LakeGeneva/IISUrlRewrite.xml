<?xml version="1.0" encoding="utf-8" ?>
<rewrite>
  <rules>
    <rule name="Restrict Robots" enabled="true" stopProcessing="true">
      <match url="^robots.txt" ignoreCase="true" />
      <conditions logicalGrouping="MatchAny">
        <add input="{HTTP_HOST}" pattern="staging\.pack239lakegeneva\.org" ignoreCase="true" />
        <add input="{HTTP_HOST}" pattern="pack239lakegeneva-staging\.azurewebsites\.net" ignoreCase="true" />
      </conditions>
      <action type="Rewrite" url="robots.staging.txt" />
    </rule>
  </rules>
</rewrite>