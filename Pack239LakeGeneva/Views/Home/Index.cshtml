@{
  ViewData["Title"] = "Home Page";
}

<div class="home">
  <h1>Cub Scout Pack 239<br />Lake Geneva, WI</h1>

  <hr />

  <div class="hero">
    <a href="Join">
      <img src="~/images/BSA/Logos/CubScout_SMI_Stacked_RGB.jpg" class="homeImage" />
    </a>
    <p>Does your daughter wish she was able to join in on all of our activities? Now she can!</p>
  </div>

  <hr />

  <br />

  <h5>Announcements, Announcements, Announcements!</h5>
  <ul>
    <li>Sign up for donut sales <a href="https://www.signupgenius.com/go/60b094ca4a628a2f94-donut" target="_blank">here</a>!</li>
    <li>We're now recruiting boys AND girls! Come <a href="Join">join us</a>!</li>
    <li>Wreath forms and pictures are available <a href="/Documents/1R_RPjW4gtVP_I5mfLKxqcIC-6qTQ2G88">here</a></li>
  </ul>

  <div id="bannerCarousel" class="carousel slide carousel-fade banner" data-ride="carousel" data-interval="3500">
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img src="~/images/BSA/BSA_WebBanner-wide_CUB1.jpg" />
      </div>
      <div class="carousel-item">
        <img src="~/images/BSA/BSA_WebBanner-wide_CUB2.jpg" />
      </div>
      <div class="carousel-item">
        <img src="~/images/BSA/BSA_WebBanner-wide_CUB3.jpg" />
      </div>
      <div class="carousel-item">
        <img src="~/images/BSA/BSA_WebBanner-wide_CUB5.jpg" />
      </div>
    </div>
  </div>

  <br />
  <br />
  <br />

  <div class="upcomingEvents">
    <div class="calendarEvents">
      <div class="loading ml-auto mr-auto">
        <svg version="1.1" id="loader-1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
             viewBox="0 0 50 50" style="enable-background:new 0 0 50 50;" xml:space="preserve">
        <path fill="#000" d="M25.251,6.461c-10.318,0-18.683,8.365-18.683,18.683h4.068c0-8.071,6.543-14.615,14.615-14.615V6.461z">
        <animateTransform attributeType="xml"
                          attributeName="transform"
                          type="rotate"
                          from="0 25 25"
                          to="360 25 25"
                          dur="0.75s"
                          repeatCount="indefinite" />

      </path>
    </svg>
        <span>Loading Events</span>
      </div>
    </div>
  </div>

  <p>
    We would love to have you <a href="Join">join us</a>! Come to any of our <a href="Calendar">events</a> or
    talk to one of our <a href="Leaders">leaders</a> to sign up!
  </p>

  <br />
  <br />
  <br />

  <p>Take a look at the fun we've had!</p>

  <div id="imageCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <ol class="carousel-indicators">
      <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#imageCarousel" data-slide-to="1"></li>
      <li data-target="#imageCarousel" data-slide-to="2"></li>
      <li data-target="#imageCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img src="~/images/Pack/2018WholePack.jpg" />
      </div>
      <div class="carousel-item">
        <img src="~/images/Pack/2018ArrowOfLight.jpg" />
      </div>
      <div class="carousel-item">
        <img src="~/images/Pack/2018PinewoodCars.jpg" />
      </div>
      <div class="carousel-item">
        <img src="~/images/Pack/2017Donuts.jpg" />
      </div>
    </div>
    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>