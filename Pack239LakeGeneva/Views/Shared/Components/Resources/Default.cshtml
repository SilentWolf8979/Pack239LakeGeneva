@model DocumentViewModel

@{
}

@if (Model != null)
{
  <div class="row">
  @foreach (var document in Model.documents)
  {
    <div class="col-6 col-sm-4 col-md-3">
      @if (document.MimeType.Equals("application/vnd.google-apps.folder", StringComparison.OrdinalIgnoreCase))
      {
        <a href="/Documents/@document.Id">@document.Name</a>
      }
      else
      {
        <a href="@document.WebViewLink">@document.Name</a>
      }
    </div>
  }
  </div>
}