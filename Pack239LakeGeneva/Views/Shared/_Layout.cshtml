<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Pack239LakeGeneva</title>

  <environment include="Development">
    <link rel="stylesheet" href="~/lib/css/bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site-320.css" />
    <link rel="stylesheet" href="~/css/site-576.css" media="screen and (min-width: 576px)" />
    <link rel="stylesheet" href="~/css/site-768.css" media="screen and (min-width: 768px)" />
    <link rel="stylesheet" href="~/css/site-992.css" media="screen and (min-width: 992px)" />

    <script defer src="~/js/fontawesome/fontawesome-all.js"></script>
  </environment>
  <environment exclude="Development">
    <link rel="stylesheet" href="~/lib/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site-320.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-576.min.css" asp-append-version="true" media="screen and (min-width: 576px)" />
    <link rel="stylesheet" href="~/css/site-768.min.css" asp-append-version="true" media="screen and (min-width: 768px)" />
    <link rel="stylesheet" href="~/css/site-992.min.css" asp-append-version="true" media="screen and (min-width: 992px)" />

    <script defer src="~/lib/js/fontawesome/fontawesome-all.min.js"></script>
  </environment>

  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#003F87">
  <meta name="theme-color" content="#003F87">
</head>
<body class="d-flex flex-column">
  @await Html.PartialAsync("Components/Header/Default")
  <!--div class="partialContents" data-url="Components/Header"></div-->

  <section class="body-content flex-grow-1">
    <div class="container">
      @RenderBody()
    </div>
  </section>

  @await Html.PartialAsync("Components/Footer/Default")
  <!--div class="partialContents" data-url="Components/Footer"></div-->

  <environment include="Development">
    <script src="~/lib/js/jquery/jquery.js"></script>
    <script src="~/lib/js/bootstrap/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  </environment>
  <environment exclude="Development">
    <script src="~/lib/js/jquery/jquery.min.js"></script>
    <script src="~/lib/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
  </environment>

  @RenderSection("Scripts", required: false)
</body>
</html>
